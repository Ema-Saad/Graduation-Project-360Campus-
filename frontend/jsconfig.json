{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // Ensure this is set to the src directory
    "paths": {
      "@/*": [ "*" ] // This allows for @/ aliasing to src/
    }
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules", "dist" ]
}
